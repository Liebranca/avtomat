#!/usr/bin/perl

# test peso classes

# ---   *   ---   *   ---
# deps

  use v5.36.0;
  use strict;
  use warnings;

  use English qw(-no_match_vars);

  use lib $ENV{'ARPATH'}.'/avtomat/sys/';
  use lib $ENV{'ARPATH'}.'/avtomat/hacks/';
  use lib $ENV{'ARPATH'}.'/avtomat/';

  use Style;
  use Arstd;

  use Fmat;
  use Blk;

# ---   *   ---   *   ---

my $frame=Blk->new_frame();
my $non=$frame->nit(undef,'non');

my $type=$Type::Table->nit(

  'struct',[

    wide=>'a,b',
    long=>'c',

  ],

);

my $ptr=$non->alloc('beg0',$type,2);

my $item=$ptr->{by_name}->[0];

${$item->{a}}=mord('hl');
${$item->{b}}=mord('wr');
${$item->{c}}=mord('$!$!');

say $non->{mem};
$non->prich();

# ---   *   ---   *   ---
