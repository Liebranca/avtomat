#  'eq',
#
#  Avt::ffind('-llycon'),
#  $ENV{'ARPATH'}.'/lib/shb7.pm',
#
#  name=>'ffind (lib/*)',
#
#);

# ---   *   ---   *   ---

Arstd::unit_test_passed();

# ---   *   ---   *   ---
1; # ret
